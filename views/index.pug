doctype html
html
  include includes/head.pug
  body
    header
      include includes/navbar.pug
      main.container
        #recentTitlesCarousel.carousel.slide(data-ride='carousel')
          ol.carousel-indicators
            li.active(data-target='#recentTitlesCarousel' data-slide-to='0')
            li(data-target='#recentTitlesCarousel' data-slide-to='1')
            li(data-target='#recentTitlesCarousel' data-slide-to='2')
          .carousel-inner
            .carousel-item.active
              .col.text-center
                h2
                  | Find your favorite 
                  span.highlighted-text  TV shows 
                  | here.
              img.d-block.w-100(src='img/wednesday-tv-show.jpg' alt='Wednesday TV show')
              .carousel-caption.d-none.d-md-block
                a.btn.btn-lg.btn-secondary.tv-show-button(href='/search' role='button' aria-pressed='true') Watch Wednesday on streaming
            .carousel-item
              .col.text-center
                h2
                  | Find your favorite 
                  span.highlighted-text  movies 
                  | here.
              img.d-block.w-100(src='img/nope-movie.jpg' alt='Nope Movie')
              .carousel-caption.d-none.d-md-block
                a.btn.btn-lg.btn-secondary.movie-button(href='/search' role='button' aria-pressed='true') Watch Nope on streaming
            .carousel-item
              .col.text-center
                h2
                  | Find your favorite 
                  span.highlighted-text  documentaries 
                  | here.
              img.d-block.w-100(src='/img/good-night-oppy-documentary.jpg' alt='Good Night Oppy Documentary')
              .carousel-caption.d-none.d-md-block
                a.btn.btn-lg.btn-secondary.documentary-button(href='/search' role='button' aria-pressed='true') Watch Good Night Oppy on streaming
          a.carousel-control-prev(href='#recentTitlesCarousel' role='button' data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
          a.carousel-control-next(href='#recentTitlesCarousel' role='button' data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next
    include includes/footer.pug