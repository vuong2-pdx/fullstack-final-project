doctype html
html
  include includes/head.pug
  header 
    include includes/navbar.pug
  body 
    maim.container
      div.text-center.mt-4
        div.btn-group.btn-group-toggle
          label.btn.btn-secondary.watchList
            input(type='radio' name='options' value='watchList')
            |  My Saved List
          if type === "movie"
            label.btn.btn-secondary.movie.active
              input(type='radio' name='options' value="movie" checked)
              |  Movie
          else
            label.btn.btn-secondary.movie
              input(type='radio' name='options' value="movie")
              |  Movie
          if type === "tv"
            label.btn.btn-secondary.tv.active
              input(type='radio' name='options' value="tv" checked)
              |  TV Show
          else
            label.btn.btn-secondary.tv
              input(type='radio' name='options' value="tv")
              |  TV Show
          if type === "either"
            label.btn.btn-secondary.either.active
              input(type='radio' name='options' value="either" checked)
              |  Either
          else
            label.btn.btn-secondary.either
              input(type='radio' name='options' value="either")
              |  Either
      if subheading
        div.bg-light.border.rounded.w-50.mx-auto.mt-5.card
          h3.text-center.mt-3 #{subheading}
          div
            img.mx-auto.d-block(src=poster, alt='poster' height='278' width='185')
            div.d-flex.justify-content-center.mt-3
                if rating >= 7.5
                  p.mx-2.rating.bg-success.text-white #{rating}
                else if rating <= 4
                  p.mx-2.rating.bg-danger.text-white #{rating}
                else if rating === null
                  p.mx-2 No data
                else
                  p.mx-2.rating.bg-warning.text-dark #{rating}
                p.mx-2 Type: #{tmdbType}
                p.mx-2 Year: #{year}
            p.w-75.mx-auto.text-center #{plot}
            div.btn-group.btn-group-toggle.d-flex.mt-3.w-50.h-50.mx-auto.justify-content-center
              label.btn.btn-danger.mx-1.rounded.ynbutton
                input(type="radio" name="yesNo", value=tmdbType)
                |  👎
              a(class="btn btn-success mx-1 rounded ynbutton" href="random/randd", role="button") 👍
    script(src="/randDisplay.js")
  include includes/footer.pug

